generator client {
  provider = "prisma-client-js"
}

//Se quiser testar em Dev:
// provider = "sqlite"

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  // id int @id @default(autoincrement)// Para usar P.key Int
  id String @id @default(uuid()) //Seta a primary key

  type       String
  comment    String
  screenshot String?

  //Renomeia a tabela para esse nome, ao inv√©s de pegar o nome expecificado do model.
  @@map("feedbacks")
}
